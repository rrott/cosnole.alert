{
  "manifest_version": 2,
  "name": "cosnole.alert",
  "version": "0.1.0",
  "description": "It extends browser's console object with additional loging functionality and he console.alert() function.",
  "short_name": "cosnole.alert",
  "permissions": ["activeTab", "declarativeContent", "storage", "<all_urls>"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "run_at": "document_start",
      "js": ["index.js"],
      "css": ["toaster.css"]
    }
  ],
  "browser_action": {
     "default_icon": "icon.svg",
     "default_popup": "popup.html"
  },
  "web_accessible_resources": [
  	"consoleReplacer.js",
    "constants.js",
    "toaster.js"
  ]
}