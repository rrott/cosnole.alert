{
  "manifest_version": 2,
  "name": "Console Alert",
  "version": "0.0.1",
  "description": "console.alert() function to use when alert() is not available.",
  "short_name": "Console Alert",
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "run_at": "document_start",
      "js": ["index.js"],
      "css": ["toaster.css"]
    }
  ],
  "browser_action": {
     // "default_icon": "icon.png",
     "default_popup": "popup.html"
  },
  "permissions": [
     "activeTab"
  ],
  "web_accessible_resources": [
  	"consoleReplacer.js",
    "constants.js",
    "toaster.js"
  ]
}