{
  "manifest_version": 3,
  "name": "cosnole.alert",
  "version": "1.0.1",
  "author": "Roman Rott",
  "description": "Extends browser's console object with the alert() function. Shows console logs/errors/warnings as toast messages to help you catch bugs faster.",
  "short_name": "cosnole.alert",
  "host_permissions": ["<all_urls>"],
  "permissions": ["storage", "activeTab", "scripting"],
  // "content_security_policy": {
  //   "extension_pages": "default-src 'self'"
  // },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "run_at": "document_start",
      "all_frames": true,
      "js": ["src/config.js", "src/lists.js", "src/history.js", "src/index.js"],
      "css": ["src/toaster.css"]
    }
  ],
  "icons": {
    "16": "/icons/cosnole-16.png",
    "32": "/icons/cosnole-32.png",
    "48": "/icons/cosnole-48.png",
    "64": "/icons/cosnole-64.png",
    "128": "/icons/cosnole-128.png",
    "256": "/icons/cosnole-256.png"
  },
  "action": {
    "default_popup": "src/popup.html",
    "default_icon": {
      "16": "/icons/cosnole-16.png",
      "32": "/icons/cosnole-32.png",
      "48": "/icons/cosnole-48.png",
      "64": "/icons/cosnole-64.png",
      "128": "/icons/cosnole-128.png",
      "256": "/icons/cosnole-256.png"
    }
  },
  "storage": {
    "managed_schema": "src/schema.json"
  },
  "options_page": "src/options.html",
  "background": {
    "service_worker": "background-wrapper.js"
  },
  "web_accessible_resources": [{
    "resources": [
      "src/cosnoleSimpleAlert.js",
      "src/cosnoleToast.js",
      "src/cosnoleAlert.js",
      "src/lists.js",
      "src/history.js",
      "src/config.js",
      "src/toaster.js"
    ],
    "matches": ["<all_urls>"]
  }]
}