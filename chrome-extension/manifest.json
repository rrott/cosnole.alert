{
  "manifest_version": 2,
  "name": "cosnole.alert",
  "version": "0.1.0",
  "description": "It extends browser's console object with additional loging functionality and he console.alert() function.",
  "short_name": "cosnole.alert",
  "permissions": ["activeTab"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "run_at": "document_start",
      "js": ["src/index.js"],
      "css": ["src/toaster.css"]
    }
  ],
  "browser_action": {
     "default_icon": "cosnole.png",
     "default_popup": "src/popup.html"
  },
  "background": {
    "scripts": ["src/background.js"]
  },
  "web_accessible_resources": [
  	"src/consoleReplacer.js",
    "src/constants.js",
    "src/toaster.js"
  ]
}